<div class="container">
  <h2>Logo</h2>
  <dl class="search-box">
    <%= search_form_for @q, url: root_path do |f| %>
      <dt><%= f.text_field :caption_or_address_cont ,placeholder: '検索するテキストを入力' %></dt>
      <dd><%= f.submit "検索", class: 'search-btn' %></dd>
    <% end %>
  </dl>
  <div>
    <% @tags.each do |tag| %>
      <% if tag.post_images.present? %>
        <span>
          <%= link_to post_images_path(tag_id: tag.id) do %>
            # <%= tag.tag_name %>
          <% end %>
        </span>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <% @post_images.each do |post| %>
      <div>
        <%= link_to post_image_path(post) do %>
          <%= attachment_image_tag post, :post_image, size:"200x200" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>