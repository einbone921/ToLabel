<div class="container">
  <h2>Logo</h2>
  <div>
    <h4>検索フォーム</h4>
  </div>
  <div>
    <% @tags.each do |tag| %>
      <span>
        <%= link_to post_images_path(tag_id: tag.id) do %> #
          <%= tag.tag_name %>
        <% end %>
      </span>
    <% end %>
  </div>
  <div class="row">
    <% @post_images.each do |post| %>
      <div>
        <%= link_to post_image_path(post) do %>
          <%= attachment_image_tag post, :post_image, size:"200x200" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>