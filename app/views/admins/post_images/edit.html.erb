<div class="container">
  <%= form_with model: @post_image, url: admins_post_image_path(@post_image), local:true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="row">
    <div class="col-md-6">
      <div>
        <%= attachment_image_tag @post_image, :post_image, size:"500x500" %>
      </div>
    </div>

    <div class="col-md-6">
      <p>説明文：<%= @post_image.caption %></p>
      <p>タグ：
        <% @post_image.tags.each do |tag| %>
          <span>
            # <%= tag.tag_name %>
          </span>
        <% end %>
      </p>
      <p>Place：<%= @post_image.address %></p>
      <div>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "無効" %>
      </div>
      <%= f.submit "変更を保存", class: 'btn btn-primary' %>
    </div>
  </div>
  <% end %>
</div>