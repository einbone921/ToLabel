<div class="container">
  <div class="profile">
    <div class="profile-image">
      <p><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100", class:"rounded-circle"; %></p>
    </div>
    <div class="user-name">
      <h5>Name：<%= @user.name %></h5>
      <% if @user.delete_flag == false %>
        <p>Status：有効会員</p>
        <% else %>
        <p>Status：退会済み</p>
        <% end %>
    </div>
    <div class="introduction">
      <h5>Introduction</h5>
      <p><%= @user.introduction %></p>
    </div>
    <div class="text-center">
      <%= link_to edit_admins_user_path(@user) do %>
        <h5>Edit This User's Status</h5>
      <% end %>
    </div>
  </div>


  <h4>投稿一覧</h4>
  <div class="row">
    <% @post_images.each do |post| %>
      <div class="image-item mt-4 shadow-lg">
        <%= link_to admins_post_image_path(post) do %>
          <%= attachment_image_tag post, :post_image, size:"200x200" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>