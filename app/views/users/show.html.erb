<div class="container">
  <div class="row">
    <div class="profile">
      <p><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100", class:"rounded-circle"; %></p>
      <div id="follow-btn">
        <% if user_signed_in? %>
          <%= render 'relationships/follow-btn', user: @user %>
        <% end %>
      </div>
      <span><%= @user.name %></span>
      <% if @user == current_user %>
        <span>
          <%= link_to edit_user_path, class:"text-dark" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="follows">
    <% if @user == current_user %>
      <p><%= link_to "follower", followers_user_path(@user.id) %></p>
      <p><%= link_to "following", follows_user_path(@user.id) %></p>
    <% end %>
  </div>
  <h6>説明文</h6>
  <div class="row">
    <div class="col-md-10 border">
      <%= @user.introduction %>
    </div>
  </div>

  <h4>投稿一覧</h4>
  <div class="row">
    <% @post_images.each do |post| %>
      <div>
        <%= link_to post_image_path(post) do %>
          <%= attachment_image_tag post, :post_image, size:"200x200" %>
        <% end %>
      </div>
    <% end %>
  </div>