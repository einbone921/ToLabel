<!DOCTYPE html>
<html>
  <head>
    <title>ToLabel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="text-center"><%= flash.now[:notice] %></div>
    <div class="text-center"><%= flash.now[:error] %></div>
    <div class="text-center"><%= flash.now[:email] %></div>
    <%= yield %>
    <%= render 'layouts/sidebar' %>
    <%= render 'layouts/footer' %>
  </body>
</html>
