<!DOCTYPE html>
<html>
  <head>
    <title>ToLabel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="header">
      <nav class="navbar bg-light">
        <div class="container">
          <i class="fas fa-bars header__icon"></i>
          <ul class="navbar ml-auto">
            <li><%= link_to "Logo", root_path %></li>
            <li><%= link_to "人気", post_images_path %></li>
            <li><%= link_to "新着", post_images_path %></li>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
    <aside class="sidebar">
      <div class="sidebar__inner">
        <h4 class="sidebar__ttl">Menu</h4>
        <i class="fas fa-times-circle sidebar__icon"></i>
      </div>
      <ul>
      <% if user_signed_in? %>
        <li class="sidebar-txt"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        <li class="sidebar-txt"><%= link_to "新規投稿", new_post_image_path %></li>
        <li class="sidebar-txt"><%= link_to "マイページ", user_path(current_user.id) %></li>
      <% else %>
        <li class="sidebar-txt"><%= link_to "新規登録", new_user_registration_path %></li>
        <li class="sidebar-txt"><%= link_to "ログイン", new_user_session_path %></li>
      <% end %>
      </ul>
    </aside>
    <div class="sidebar-bg"></div>
  </body>
</html>
