<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p><%= attachment_image_tag @post_image, :post_image, size:"500x500" %></p>
      <% if @post_image.user == current_user %>
        <p><%= link_to "編集", edit_post_image_path %></p>
      <% else %>
        <p>
          <%= link_to user_path(@post_image.user) do %>
            <%= attachment_image_tag @post_image.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
          <% end %>
        </p>
      <% end %>

      <% if user_signed_in? %>
        <% if @post_image.favorited_by?(current_user) %>
          <p>
            <%= link_to post_image_favorites_path(@post_image), method: :delete do %>
              ♥<%= @post_image.favorites.count %>
            <% end %>
          </p>
        <% else %>
          <p>
            <%= link_to post_image_favorites_path(@post_image), method: :post do %>
              ♡<%= @post_image.favorites.count %>
            <% end %>
          </p>
        <% end %>
      <% end %>

      <p>説明: <%= @post_image.caption %></p>
    </div>
  </div>

  <div class="row">
    <%= attachment_image_tag @user, :profile_image %>
  </div>

  <div class="row">
    <% @post_image.tags.each do |tag| %>
      <span>
        <%= link_to post_images_path(tag_id: tag.id) do %> #
         <%= tag.tag_name %>
        <% end %>
      </span>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="row">
      <p>コメント件数：<%= @post_image.post_comments.count %></p>
      <% @post_image.post_comments.each do |post_comment| %>
        <p>
          <%= link_to user_path(post_comment.user) do %>
            <%= attachment_image_tag post_comment.user, :profile_image, fallback: "no_image.jpg", size: "50x50" %>
          <% end %>
          <span><%= post_comment.user.name %></span>
          <span><%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %></span>
        </p>
        <% if post_comment.user == current_user %>
          <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete %>
        <% end %>
      <% end %>
    </div>

    <div>
      <%= form_with(model:[@post_image, @post_comment], local: true) do |f| %>
        <%= f.text_area :comment, rows:'5', placeholder: "コメント" %>
        <%= f.submit "Create" %>
      <% end %>
    </div>
  <% end %>
</div>

