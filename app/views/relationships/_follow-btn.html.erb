<% if current_user != user %>
  <% if user.followed_by?(current_user) %>
    <%= link_to user_relationships_path(user.id), method: :delete, class:"text-secondary", remote: true do %>
      <i class="fas fa-user-minus"></i>
    <% end %>
  <% else %>
    <%= link_to user_relationships_path(user.id), method: :post, class:"text-secondary", remote: true do %>
      <i class="fas fa-user-plus"></i>
    <% end %>
  <% end %>
<% end %>