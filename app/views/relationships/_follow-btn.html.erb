<% if current_user != user %>
  <% if user.followed_by?(current_user) %>
    <p>
      <%= link_to user_relationships_path(user.id), method: :delete, class:"text-info", remote: true do %>
        <i class="fas fa-user-minus"></i>
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to user_relationships_path(user.id), method: :post, class:"text-info", remote: true do %>
        <i class="fas fa-user-plus"></i>
      <% end %>
    </p>
  <% end %>
<% end %>